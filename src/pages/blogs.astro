---
import Layout from "../layouts/Layout.astro";
import styles from "./_Blog.module.css";
const allBlogs = await Astro.glob("/src/pages/blogs/*.md");
---

<Layout title="kAsA's website">
  <div class={styles.main}>
    <h1>ブログ一覧</h1>
    <ul>
      {
        allBlogs.map((blog) => (
          <li>
            <a href={blog.url} class={styles.link}>
              <h2>{blog.frontmatter.title}</h2>
              <span class={styles.date}>{blog.frontmatter.date}</span>
              <span class={styles.tags}>{blog.frontmatter.tags.join(", ")}</span>
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</Layout>
