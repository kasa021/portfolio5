---
import Layout from "../../layouts/Layout.astro";
import style from "./_Index.module.css";

const modules = import.meta.glob("/src/pages/blogs/*.md", { eager: true });
const allBlogs = Object.values(modules);
const tags = [
    ...new Set(allBlogs.map((post: any) => post.frontmatter.tags).flat()),
];

const pageTitle = "Tag Index";
---

<Layout title={pageTitle}>
    <div class={style.tags}>
        {
            tags.map((tag) => (
                <p>
                    <a href={`/tags/${tag}`}>{tag}</a>
                </p>
            ))
        }
    </div>
</Layout>
